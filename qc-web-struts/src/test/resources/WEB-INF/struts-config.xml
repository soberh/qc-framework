<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>
	<form-beans>
		<form-bean name="exampleForm" type="org.apache.commons.beanutils.LazyDynaBean">
			<form-property name="a"
				type="org.apache.commons.beanutils.LazyDynaBean">
			</form-property>
		</form-bean>
	</form-beans>

	<global-exceptions>
		<exception key="qc.error.qcexception" type="qc.exception.QcException"
			path="/exception/QcException.jsp"></exception>
	</global-exceptions>
	<global-forwards>
	</global-forwards>

	<action-mappings>
		<!-- 下载data目录文件的action，默认为下载jpg类型的文件 -->
		<action path="/example" name="exampleForm" scope="request"
			validate="false" parameter="method">
			<forward name="ExampleView" path="/example/ExampleView.jsp" />
			<forward name="ExampleForm" path="/example/ExampleForm.jsp" />
		</action>
	</action-mappings>

	<!--
		配了controller后，上面的action配置就不用配type的值了，否则action必须配置
		type="org.springframework.web.struts.DelegatingActionProxy"
	-->
	<controller>
		<set-property property="processorClass"
			value="org.springframework.web.struts.DelegatingRequestProcessor" />
	</controller>

	<plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
		<!-- 测试环境下配置这个加载spring的配置文件 -->
		<set-property property="contextConfigLocation"
			value="classpath:qc/web/struts/StrutsCRUDActionTest-context.xml" />
	</plug-in>
</struts-config>
